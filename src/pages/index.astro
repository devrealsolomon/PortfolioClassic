---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import projects from "../../utils/Projects";
import TechStack from "../components/TechStack.astro";
---

<Layout title="Solomon Olatunji">
  <main
    class="container mx-auto max-w-3xl space-y-8 px-4 pt-10 pb-2 lg:space-y-10 lg:py-12"
  >
    <header>
      <h1 class="text-3xl font-bold flex items-center">
        Hi, I'm Solomon Olatunji
        <img
          src="https://cdn.joypixels.com/products/previews/O6D7BMG8R2DMMNC4LLZH/2311_1hGcwOlOK6CDJaItpeRaYzO1Lh8DPFFK.gif"
          alt=""
          width="50px"
          class="ml-2"
        />
      </h1>
      <p class="text-xl my-3 text-gray-500">
        Software engineer && startup founder
      </p>
      <p class="">
        I run into problems and I love to create solutions for myself and
        others, and also make some $$$ while doing that. But I don't always run
        into problems, sometimes I just love building out cool ideas that come
        to my head.
      </p>
    </header>

    <section>
      <h2 class="text-3xl flex items-center">
        Stuff I've built
        <img
          src="https://cdn.joypixels.com/products/previews/O6D7BMG8R2DMMNC4LLZH/3106_9qTxA57k7StZYhBXKh2beVpviSqO5Anr.gif"
          alt=""
          width="50px"
        />
      </h2>
      <ul class="">
        {
          projects.map((project) => (
            <Card
              title={project.name}
              description={project.description}
              url={project.url}
              emoji={project.emoji}
              tags={project.tags}
              logo={project.logo}
            />
          ))
        }
      </ul>
    </section>
    <section>
      <h2 class="text-3xl flex items-center mb-4">
        Some tech I love
        <img
          src="https://cdn.joypixels.com/products/previews/O6D7BMG8R2DMMNC4LLZH/2304_q4MLtmc7BVILKnAWzHaf9RcRSZhkNNzi.gif"
          alt=""
          width="50px"
        />
      </h2>
      <TechStack />
    </section>
    <section>
      <h2 class="text-3xl flex items-center">
        Elsewhere
        <img
          src="https://cdn.joypixels.com/products/previews/O6D7BMG8R2DMMNC4LLZH/2396_B1EzOm6PQ0i26LI8AWYI7nytVBDcmM5D.gif"
          alt=""
          width="50px"
        />
      </h2>
      <div class="my-5">
        <h3 class="text-xl font-bold mb-1">
          <i class="fa-brands fa-twitter"></i>
          <a
            href="http://twitter.com/_realsolomon"
            target="_blank"
            rel="noopener noreferrer">@_realsolomon</a
          >
        </h3>
        <p class="text-gray-500 font-medium">
          I post about my projects and random things.
        </p>
      </div>
      <div class="my-5">
        <h3 class="text-xl font-bold mb-1">
          <i class="fa-brands fa-instagram"></i>
          <a
            href="http://instagram.com/_realsolomon"
            target="_blank"
            rel="noopener noreferrer">@_realsolomon</a
          >
        </h3>
        <p class="text-gray-500 font-medium">If you like pictures.</p>
      </div>
      <div class="my-5">
        <h3 class="text-xl font-bold mb-1">
          <i class="fa-brands fa-tiktok"></i>
          <a
            href="http://tiktok.com/@realsolomondev"
            target="_blank"
            rel="noopener noreferrer">@realsolomondev</a
          >
        </h3>
        <p class="text-gray-500 font-medium">
          I make bottle flip and code videos when I'm bored.
        </p>
      </div>
      <div class="my-5">
        <h3 class="text-xl font-bold mb-1">
          <i class="fa-brands fa-github"></i>
          <a
            href="http://github.com/devrealsolomon"
            target="_blank"
            rel="noopener noreferrer">@devrealsolomon</a
          >
        </h3>
        <p class="text-gray-500 font-medium">
          Incase you want to check out my code.
        </p>
      </div>
    </section>
    <section>
      <p class="flex items-center justify-center">
        Built with <svg
          style="fill: #fff; width:25px"
          role="img"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          ><title>Astro</title><path
            d="M16.074 16.86c-.72.616-2.157 1.035-3.812 1.035-2.032 0-3.735-.632-4.187-1.483-.161.488-.198 1.046-.198 1.402 0 0-.106 1.75 1.111 2.968 0-.632.513-1.145 1.145-1.145 1.083 0 1.082.945 1.081 1.712v.069c0 1.164.711 2.161 1.723 2.582a2.347 2.347 0 0 1-.236-1.029c0-1.11.652-1.523 1.41-2.003.602-.383 1.272-.807 1.733-1.66a3.129 3.129 0 0 0 .378-1.494 3.14 3.14 0 0 0-.148-.954zM15.551.6c.196.244.296.572.496 1.229l4.368 14.347a18.18 18.18 0 0 0-5.222-1.768L12.35 4.8a.37.37 0 0 0-.71.002l-2.81 9.603a18.175 18.175 0 0 0-5.245 1.771L7.974 1.827c.2-.656.3-.984.497-1.227a1.613 1.613 0 0 1 .654-.484C9.415 0 9.757 0 10.443 0h3.135c.686 0 1.03 0 1.32.117A1.614 1.614 0 0 1 15.55.6z"
          ></path>
        </svg> &&
        <svg
          style="fill: #fff; width:25px"
          role="img"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          ><title>Tailwind CSS</title><path
            d="M12.001,4.8c-3.2,0-5.2,1.6-6,4.8c1.2-1.6,2.6-2.2,4.2-1.8c0.913,0.228,1.565,0.89,2.288,1.624 C13.666,10.618,15.027,12,18.001,12c3.2,0,5.2-1.6,6-4.8c-1.2,1.6-2.6,2.2-4.2,1.8c-0.913-0.228-1.565-0.89-2.288-1.624 C16.337,6.182,14.976,4.8,12.001,4.8z M6.001,12c-3.2,0-5.2,1.6-6,4.8c1.2-1.6,2.6-2.2,4.2-1.8c0.913,0.228,1.565,0.89,2.288,1.624 c1.177,1.194,2.538,2.576,5.512,2.576c3.2,0,5.2-1.6,6-4.8c-1.2,1.6-2.6,2.2-4.2,1.8c-0.913-0.228-1.565-0.89-2.288-1.624 C10.337,13.382,8.976,12,6.001,12z"
          ></path>
        </svg>
      </p>
    </section>
  </main>
</Layout>
